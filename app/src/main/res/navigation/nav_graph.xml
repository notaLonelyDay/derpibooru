<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="me.lonelyday.derpibooru.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_searchSuggestionsFragment"
            app:destination="@id/searchSuggestionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchSuggestionsFragment"
        android:name="me.lonelyday.derpibooru.ui.search.SearchSuggestionsFragment"
        android:label="fragment_search_suggestions"
        tools:layout="@layout/fragment_search_suggestions" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="me.lonelyday.derpibooru.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>